{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "cwd": "${workspaceFolder}",
            "executable": "${command:cmake.launchTargetPath}",
            "name": "Debug with QEMU",
            "request": "launch",
            "type": "cortex-debug",
            // Provide both the CPU and machine type.
            // The debugger automatically runs QEMU with these parameters, as follows.
            //
            //  qemu-system-arm -cpu cortex-m4 -machine netduinoplus2
            //      -nographic -semihosting-config enable=on,target=native
            //      -gdb "tcp::50000" -S -kernel "/path/to/some.elf"
            //
            "cpu": "cortex-m4",
            "machine": "netduinoplus2",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "servertype": "qemu"
        },
        {
            "cwd": "${workspaceRoot}",
            "executable": "${command:cmake.launchTargetPath}",
            "name": "Debug with OpenOCD",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg"
            ],
            "searchDir": [],
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw"
        },
        {
            "cwd": "${workspaceFolder}",
            "executable": "${command:cmake.launchTargetPath}",
            "name": "Debug with ST-Util",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "servertype": "stutil"
        }
    ]
}
